@page
@model ServiceHost.Pages.SearchModel
@{
    ViewData["Title"] = "جستجو";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h1 class="breadcrumb-content__title">نتیجه جستجو برای @TempData["Value"]</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="shop-page-content">
                                    <div class="row shop-product-wrap grid three-column">
                                        @foreach (var product in Model.Products)
                                        {
                                            <div class="col-12 col-lg-4 col-md-4 col-sm-6">
                                                <div class="single-grid-product grid-view-product">
                                                    <div class="single-grid-product__image">
                                                        <div class="single-grid-product__label">
                                                            @if (product.HasDiscount)
                                                            {
                                                                <span class="sale">@product.DiscountRate%</span>
                                                            }
                                                            <span class="new">جدید</span>
                                                        </div>
                                                        <a href="single-product.html">
                                                            <img src="~/Images/ProductCategory/@product.Picture" class="img-fluid"
                                                                 alt="@product.PictureAlt">
                                                            <img src="~/Images/ProductCategory/@product.Picture" class="img-fluid"
                                                                 alt="@product.PictureAlt">
                                                        </a>
                                                    </div>
                                                    <div class="single-grid-product__content">
                                                        <div class="single-grid-product__category-rating">
                                                            <span class="category">
                                                                <a asp-page="./ProductCategory" asp-route-id="@product.CategorySlug">@product.Category</a>
                                                            </span>
                                                            <span class="rating">
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star active"></i>
                                                                <i class="ion-android-star-outline"></i>
                                                            </span>
                                                        </div>

                                                        <h3 class="single-grid-product__title">
                                                            <a asp-page="/ProductDetails">
                                                                @product.Name
                                                            </a>
                                                        </h3>
                                                        <p class="single-grid-product__price">
                                                            @if (product.HasDiscount)
                                                            {
                                                                <span class="discounted-price">@product.UnitPriceWithDiscount تومان</span> <span class="main-price discounted">@product.UnitPrice تومان</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="main-price">@product.UnitPrice تومان</span>
                                                            }
                                                        </p>
                                                        @if (product.HasDiscount)
                                                        {
                                                            <div class="product-countdown" data-countdown="@product.DiscountEndDate"></div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="pagination-area">
                                    <div class="pagination-area__left">
                                        Showing 1 to 9 of 11 (2 Pages)
                                    </div>
                                    <div class="pagination-area__right">
                                        <ul class="pagination-section">
                                            <li>
                                                <a class="active" href="#">1</a>
                                            </li>
                                            <li>
                                                <a href="#">2</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>